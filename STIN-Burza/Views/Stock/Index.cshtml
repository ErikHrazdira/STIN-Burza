@model List<Stock>

@{
    ViewBag.Title = "Oblíbené položky";
}

<h2>Oblíbené položky</h2>

<form asp-action="AddFavorite" method="post">
    <input type="text" name="name" placeholder="Zadej název akcie" required />
    <button type="submit">Přidat</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Název</th>
            <th>Ceny (7 dní)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stock in Model)
        {
            <tr>
                <td>@stock.Name</td>
                <td>
                    @foreach (var price in stock.PriceHistory)
                    {
                        <div>@price.Date.ToShortDateString() - @price.Price</div>
                    }
                </td>
                <td>
                    <form asp-action="RemoveFavorite" method="post">
                        <input type="hidden" name="name" value="@stock.Name" />
                        <button type="submit" class="btn btn-danger">Odstranit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
